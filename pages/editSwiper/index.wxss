/* pages/editSwiiper/index.wxss */
.container{
  background-color: #ececec;
}
.swiperItemList .newItem{
  padding-top: 20rpx;
}
.swiper_imgs{
  width: 100%;
  margin-top: 10rpx;
  background-color: #fff;
}
.itemText{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 20rpx;
}
.itemTextLeft{
  padding: 30rpx auto 0 30rpx;
}
.imgContainer{
  display: flex;
  align-items: center;
  justify-content: center;
}
.imgContainer image{
  display: block;
  width: 600rpx;
  height: 360rpx;
  border: 2px solid #ccc;
}
.submitEdit{
  width: 100%;
  height: 50rpx;
  background-color: #fff;
  text-align: center;
  color: rgb(22, 68, 155);
}
.addInfoLink{
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: 0.9rem;
  color: cornflowerblue;
}
.operateSwiper{
  margin: 10rpx 30rpx 10rpx auto;
  display: flex;
  flex-direction: row;
}
.operateU{
  padding-right: 15rpx;
}
.operateD{
  border-left: 2px solid #ccc;
  padding-left: 15rpx;
}
.addSwiper{
  margin: 45rpx 30rpx;
}
.addSwiper button{
  background-color: #f1e8e3;
}
.chooseImg{
  width: 300rpx;
  height: 225rpx;
  border: 2px dashed #ccc;
}
