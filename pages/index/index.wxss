/**index.wxss**/
.clear{ clear:both} 
.container{
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.s1{
  position: fixed;
  top: 0;
  left: 0;
  background-color:transparent;
}
.swiper-item{
  text-align: center;
  position: fixed;
}
.swiper-item>image{
  display: block;
  border: none;
}
.swiper_content{
  display: flex;
  align-items: center;
  justify-content: center;
}
.s2{
  background-color:transparent;
  padding: 6rpx;
}
.s2 .swiper-item>image{
  display: block;
  position: relative;
  z-index: 0;
  border-radius: 15rpx;
}
.containerText{
  position: absolute;
  z-index: 2; 
  margin-left: 15rpx;
  font-size: 30rpx;
  font-weight:bold;
  color: #fff;
}
