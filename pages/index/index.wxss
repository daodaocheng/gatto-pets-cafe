/**index.wxss**/

.clear {
  clear: both;
}

.container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.s1 {
  position: fixed;
  top: 0;
  left: 0;
  background-color: transparent;
}

.edit_btn {
  margin-right: 0;
  right: 0;
  padding-left: 5rpx;
  position: relative;
  width: 80rpx;
  height: 50rpx;
  z-index: 5;
  color: #000;
  background-color: #d2d3d5;
  box-shadow: 0 0 10rpx #03030390;
}

.swiper-item {
  text-align: center;
  position: fixed;
}

.swiper-item>image {
  display: block;
  border: none;
}

.swiper_content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.s2 {
  background-color: transparent;
  padding: 6rpx;
  position: relative;
  z-index: 0;
}

.s2 .swiper-item>image {
  display: block;
  position: relative;
  z-index: 0;
  border-radius: 15rpx;
}

.containerText {
  position: absolute;
  z-index: 2;
  margin-left: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}

