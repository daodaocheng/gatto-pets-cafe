/* pages/i_night/index.wxss */
.navbar-action_item {
  color: #333;
  font-weight: bold;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  position: absolute;
  left: 20px;
  z-index: 11;
  line-height: 1;
  padding-top: 35px;
}
.content{
  background-image: url(https://6761-gatto-pets-cafe-mzve6-1300835645.tcb.qcloud.la/pictures/bar_back.jpg?sign=23191476343470edfc17c5cfcd627ddd&t=1576843885);
  background-repeat: no-repeat;
  background-size:100% 100%;
  background-attachment:fixed;
  background-position:center;
  height: 100%;
}
.icon_group{
  display: flex;
  justify-content: center;
  flex-direction: row;
  padding: 20rpx 50rpx 0;
}
.icon_item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0 80rpx;
}
.icon_item>image{
  width: 100rpx;
  height: 125rpx;
}
.icon_item>text{
  font-weight: bold;
  padding-top: 10rpx;
  color: #fff;
}

.img_group{
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0 auto 45rpx 30rpx;
}
.img_group>image{
  width: 375rpx;
  height: 250rpx;
  margin: 40rpx 15rpx;
}

.img_column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 30rpx 30rpx 45rpx auto;
}
.img_column>image{
  width: 270rpx;
  height: 180rpx;
  margin: 10rpx 15rpx;
}